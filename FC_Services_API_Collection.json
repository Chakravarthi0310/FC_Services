{
    "info": {
        "name": "FC Services API Collection",
        "description": "Complete API collection for Farm-to-Consumer Services backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000/api",
            "type": "string"
        },
        {
            "key": "customerToken",
            "value": "",
            "type": "string"
        },
        {
            "key": "farmerToken",
            "value": "",
            "type": "string"
        },
        {
            "key": "adminToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register Customer",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"John Customer\",\n  \"email\": \"customer@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"CUSTOMER\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register"
                        }
                    }
                },
                {
                    "name": "Register Farmer",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Jane Farmer\",\n  \"email\": \"farmer@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"FARMER\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register"
                        }
                    }
                },
                {
                    "name": "Register Admin",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"ADMIN\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/register"
                        }
                    }
                },
                {
                    "name": "Login Customer",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.collectionVariables.set('customerToken', pm.response.json().token);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login"
                        }
                    }
                },
                {
                    "name": "Login Farmer",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.collectionVariables.set('farmerToken', pm.response.json().token);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"farmer@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login"
                        }
                    }
                },
                {
                    "name": "Login Admin",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.collectionVariables.set('adminToken', pm.response.json().token);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login"
                        }
                    }
                }
            ]
        },
        {
            "name": "Farmer Profile",
            "item": [
                {
                    "name": "Create Farmer Profile",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{farmerToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"farmName\": \"Green Valley Farm\",\n  \"phone\": \"1234567890\",\n  \"address\": \"123 Farm Road, Rural Area\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/farmers"
                        }
                    }
                },
                {
                    "name": "Get My Farmer Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{farmerToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/farmers/me"
                        }
                    }
                },
                {
                    "name": "Verify Farmer (Admin)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"status\": \"APPROVED\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/farmers/verify/:userId"
                        }
                    }
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "Create Product (Farmer)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{farmerToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Organic Tomatoes\",\n  \"description\": \"Fresh organic tomatoes from our farm\",\n  \"price\": 5.99,\n  \"unit\": \"kg\",\n  \"stock\": 100,\n  \"category\": \"<categoryId>\",\n  \"images\": []\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/products"
                        }
                    }
                },
                {
                    "name": "Get All Products (Public)",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/products"
                        }
                    }
                },
                {
                    "name": "Update Product (Farmer)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{farmerToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"price\": 6.99,\n  \"stock\": 150\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/products/:productId"
                        }
                    }
                },
                {
                    "name": "Delete Product (Farmer)",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{farmerToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/products/:productId"
                        }
                    }
                },
                {
                    "name": "Get Image Upload URL (Farmer)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{farmerToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"contentType\": \"image/jpeg\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/products/:productId/image-upload-url"
                        }
                    }
                }
            ]
        },
        {
            "name": "Cart",
            "item": [
                {
                    "name": "Get My Cart",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customerToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/cart"
                        }
                    }
                },
                {
                    "name": "Add to Cart",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customerToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"productId\": \"<productId>\",\n  \"quantity\": 3\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/cart"
                        }
                    }
                },
                {
                    "name": "Update Cart Item Quantity",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customerToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"quantity\": 5\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/cart/:productId"
                        }
                    }
                },
                {
                    "name": "Remove Item from Cart",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customerToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/cart/:productId"
                        }
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Create Order from Cart",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customerToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"deliveryAddress\": {\n    \"street\": \"123 Main Street\",\n    \"city\": \"Springfield\",\n    \"state\": \"IL\",\n    \"zipCode\": \"62701\",\n    \"country\": \"USA\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/orders"
                        }
                    }
                },
                {
                    "name": "Get My Orders",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customerToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders"
                        }
                    }
                },
                {
                    "name": "Get Order by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customerToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders/:orderId"
                        }
                    }
                },
                {
                    "name": "Cancel Order",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customerToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders/:orderId/cancel"
                        }
                    }
                },
                {
                    "name": "Get All Orders (Admin)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/orders/admin/all?status=CREATED"
                        }
                    }
                },
                {
                    "name": "Update Order Status (Admin)",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{adminToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"status\": \"SHIPPED\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/orders/:orderId/status"
                        }
                    }
                }
            ]
        }
    ]
}